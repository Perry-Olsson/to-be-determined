{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Perry Olsson <olsson.perry@gmail.com>",
  "license": "MIT",
  "scripts": {
    "tsc": "rm -rf dist/ && tsc",
    "watch": "rm -rf dist/ && tsc --watch",
    "start": "NODE_ENV=production node ./dist/index.js",
    "dev": "NODE_ENV=development ts-node-dev --respawn src/index.ts",
    "dev:js": "NODE_ENV=development nodemon dist/index.js",
    "lint": "eslint ./src/**/*.ts",
    "db:init": "docker exec api_db_1 psql -U postgres -c 'CREATE DATABASE dev;'",
    "migration:create": "npx mikro-orm migration:create",
    "schema:create": "npx mikro-orm schema:create -r",
    "schema:drop": "npx mikro-orm schema:drop -r",
    "db:clear": "yarn schema:drop && yarn schema:create",
    "db:addUsers": "ts-node ./src/devServices/addUsers.ts",
    "db:clearUsers": "ts-node ./src/devServices/clearUsers.ts",
    "db:test": "ts-node ./src/devServices/test.ts"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@mikro-orm/cli": "^4.3.4",
    "@mikro-orm/core": "^4.3.4",
    "@mikro-orm/postgresql": "^4.3.4",
    "apollo-server-express": "^2.19.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.17",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/email-validator": "^1.0.6",
    "@types/express": "^4.17.9",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.14",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
